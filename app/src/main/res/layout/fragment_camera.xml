<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/camera_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">

    <androidx.camera.view.PreviewView
        android:id="@+id/view_finder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scaleType="fillStart">


    </androidx.camera.view.PreviewView>

    <TextView
        android:id="@+id/inference_time_val"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:layout_centerVertical="true"
        android:gravity="end"
        android:text="0ms"
        android:textColor="@color/bottom_sheet_text_color"
        android:textSize="@dimen/bottom_sheet_text_size" />




    <org.tensorflow.lite.examples.objectdetection.OverlayView
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchor="@+id/view_finder"
        app:layout_anchorGravity="center" />



<!--指示图和 提示文案-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/detect_tip"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginLeft="-10dp"
            android:layout_marginTop="300dp"
            android:rotation="90"
            android:text="识别提示"
            android:textAlignment="viewStart"
            android:textColor="@color/detect_tip"
            android:textSize="@dimen/detect_tip_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/detect_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="30dp"
            android:ellipsize="end"
            android:rotation="90"
            android:text="识别结果："
            android:textColor="@color/detect_data"
            android:textSize="@dimen/detect_tip_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />



        <ImageView
            android:id="@+id/arrow_bottom"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/arrow_bottom"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="680dp"
            android:visibility="invisible"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />


        <ImageView
            android:id="@+id/arrow_left"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/arrow_left"
            android:layout_marginLeft="200dp"
            android:visibility="invisible"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:id="@+id/arrow_right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/arrow_right"
            android:visibility="invisible"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/arrow_top"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/arrow_top"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="200dp"
            android:visibility="invisible"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/car_bg"
        android:layout_width="640dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="-90dp"

        android:rotation="90"
        android:src="@drawable/bg" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- Camera control and gallery buttons -->


        <ImageButton
            android:id="@+id/camera_capture_button"
            android:layout_width="@dimen/round_button_large"
            android:layout_height="@dimen/round_button_large"
            android:layout_marginEnd="168dp"
            android:background="@drawable/ic_shutter"
            android:contentDescription="@string/capture_button_alt"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.962" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>